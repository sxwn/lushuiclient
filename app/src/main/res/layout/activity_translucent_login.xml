<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/common_20"
        android:layout_marginRight="@dimen/common_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_mine_login_dialog_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="27dp">

                <EditText
                    android:id="@+id/activity_login_username_et"
                    style="@style/mine_login_sub"
                    android:drawableLeft="@drawable/login_phone_icon"
                    android:hint="请输入手机号登录"
                    android:maxLength="11" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/common_20"
                android:layout_marginRight="@dimen/common_20"
                android:background="#F0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="17dp">

                <EditText
                    android:id="@+id/activity_login_userauthcode_et"
                    style="@style/mine_login_sub"
                    android:drawableLeft="@drawable/login_locked_icon"
                    android:drawablePadding="@dimen/common_20"
                    android:hint="请输入验证码"
                    android:maxLength="6" />

                <TextView
                    android:id="@+id/activity_login_obtain_authcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_mine_login_dialog_authcode"
                    android:fontFamily="PingFangSC-Regular"
                    android:paddingBottom="@dimen/common_10"
                    android:paddingLeft="@dimen/common_16"
                    android:paddingRight="@dimen/common_16"
                    android:paddingTop="@dimen/common_10"
                    android:text="获取验证码"
                    android:textColor="#C0C0C0"
                    android:textSize="@dimen/common_13" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="17dp">

                <TextView
                    android:id="@+id/activity_login_commit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="PingFangSC-Regular"
                    android:hint="登录"
                    android:textColor="@color/mine_login_after"
                    android:textSize="@dimen/common_18" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/activity_login_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="-12dp"
            android:layout_marginTop="-15dp"
            android:src="@mipmap/dialog_login_close" />
    </FrameLayout>


</RelativeLayout>