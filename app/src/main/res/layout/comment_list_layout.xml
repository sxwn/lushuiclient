<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_list_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:background="@color/divider" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/comment_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/comment_list_bottom_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/common_8"
        android:background="@drawable/shape_detail_comment"
        android:drawablePadding="6dp"
        android:gravity="center|left"
        android:paddingBottom="@dimen/common_8"
        android:paddingLeft="@dimen/common_8"
        android:paddingTop="@dimen/common_8"
        android:text="@string/detail_write_comment"
        android:textColor="@color/common_text_color"
        android:textSize="13sp" />
</LinearLayout>