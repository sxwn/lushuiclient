<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_6"
        android:padding="@dimen/common_12">

        <TextView
            android:id="@+id/bing_alipay_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="支付宝"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/common_14" />

        <EditText
            android:id="@+id/bing_alipay_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_8"
            android:layout_toRightOf="@id/bing_alipay_string"
            android:background="@null"
            android:hint="支付宝账号或者手机号码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/common_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_12"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_6"
        android:padding="@dimen/common_12">

        <TextView
            android:id="@+id/bing_alipay_truename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="姓名\t\t"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/common_14" />

        <EditText
            android:id="@+id/bing_alipay_truename_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_8"
            android:layout_toRightOf="@id/bing_alipay_truename"
            android:background="@null"
            android:hint="请输入您的姓名"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/common_14" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_12"
        android:background="@color/divider" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/common_8"
        android:paddingLeft="@dimen/common_16"
        android:paddingTop="@dimen/common_8"
        android:text="请确保您的手机号已经注册过APP哦"
        android:textColor="@color/tab_selected_color"
        android:textSize="@dimen/common_12" />
    <RelativeLayout
        android:id="@+id/bing_alipay_rl_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/common_16"
        android:background="@color/wechat_main_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/common_16" />
    </RelativeLayout>

</LinearLayout>