<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1F1F1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/common_8"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="@dimen/common_15"
                    android:text="订单信息"
                    android:textColor="#484848"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vip_pay_order_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="98.0"
                        android:textColor="#484848"
                        android:textSize="48dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_14"
                        android:text="金币"
                        android:textColor="#9B9B9B"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/vip_pay_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/common_20"
                    android:text="开通/续费1个月会员"
                    android:textColor="#9B9B9B"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vip_pay_charge_account_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_8"
                android:background="@color/white">

                <TextView
                    android:id="@+id/vip_pay_charge_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_15"
                    android:layout_marginLeft="@dimen/common_20"
                    android:layout_marginTop="@dimen/common_15"
                    android:drawableLeft="@drawable/coin_charge_icon"
                    android:drawablePadding="@dimen/common_14"
                    android:text="充值账户"
                    android:textColor="#484848"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/vip_pay_charge_cb"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_20"
                    android:background="@drawable/drawable_pay_type"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="false"
                    android:focusableInTouchMode="false" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vip_pay_income_account_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/vip_pay_income_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_15"
                    android:layout_marginLeft="@dimen/common_20"
                    android:layout_marginTop="@dimen/common_15"
                    android:drawableLeft="@drawable/coin_income_icon"
                    android:drawablePadding="@dimen/common_14"
                    android:text="收入账户"
                    android:textColor="#484848"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/vip_pay_income_cb"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_20"
                    android:background="@drawable/drawable_pay_type"
                    android:button="@null"
                    android:checked="false"
                    android:clickable="false"
                    android:focusableInTouchMode="false" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_20"
                android:paddingRight="@dimen/common_20"
                android:paddingTop="@dimen/common_16"
                android:text="*当充值账户不足以抵扣时，会默认扣除收入账户的金币"
                android:textColor="#9B9B9B"
                android:textSize="13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_20"
                android:paddingRight="@dimen/common_20"
                android:paddingTop="@dimen/common_8"
                android:text="*当收入账户不足以抵扣时，会默认扣除充值账户的金币"
                android:textColor="#9B9B9B"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/vip_pay_commit"
                android:layout_width="187dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="94dp"
                android:background="#FADC4A"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="#FF484848"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="94dp"
                android:background="#F1F1F1"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>