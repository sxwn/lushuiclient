<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_pay_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_video_pay_style"
        android:padding="@dimen/common_12">

        <TextView
            android:id="@+id/isplay_pay_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="性感提示"
            android:textColor="@color/text_color_666" />

        <TextView
            android:id="@+id/isplay_pay_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/isplay_pay_tips"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/common_8"
            android:layout_marginTop="@dimen/common_8"
            android:text="观看完整版只需6元哟"
            android:textColor="@color/text_color_666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/isplay_pay_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/video_pay_cacel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_nopay_window_style"
                android:gravity="center"
                android:text="残忍拒绝"
                android:textColor="@color/text_color_666" />

            <TextView
                android:id="@+id/video_pay_commit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_pay_window_style"
                android:gravity="center"
                android:text="支付"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>