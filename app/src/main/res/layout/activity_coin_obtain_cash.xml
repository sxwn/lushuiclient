<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_20"
        android:background="@drawable/drawable_obtain_cash_topbg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_20"
        android:paddingRight="@dimen/common_20"
        android:paddingTop="@dimen/common_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现收益" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_20"
            android:layout_marginTop="@dimen/common_28"
            android:background="@null"
            android:drawableLeft="@drawable/rmb_icon"
            android:drawablePadding="@dimen/common_6"
            android:gravity="bottom"
            android:hint="       "
            android:textColor="#484848"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="32dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_16"
            android:layout_marginTop="@dimen/common_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提现金币:"
                android:textColor="#808080"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_6"
                android:text="350.0"
                android:textColor="#EBD17F"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_20"
        android:layout_marginRight="@dimen/common_20"
        android:layout_marginTop="@dimen/common_10"
        android:background="@drawable/drawable_obtain_cash_topbg"
        android:padding="@dimen/common_18">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现账号"
            android:textColor="#808080"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/coin_obtain_cash_setaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/common_20"
            android:drawableRight="@drawable/right_jiantou"
            android:text="点击设置"
            android:textColor="#808080"
            android:textSize="14dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_10"
        android:text="*提现金额将于1-2个工作日到账"
        android:textColor="#9B9B9B"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/drawable_gray_corners_onehanded"
        android:gravity="center"
        android:text="提现"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/coin_obtain_cash_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="有疑问？查看提现规则>>>"
        android:textColor="#808080"
        android:textSize="14dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>