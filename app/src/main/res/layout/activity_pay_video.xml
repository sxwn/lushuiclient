<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_8"
        android:paddingLeft="@dimen/common_12"
        android:paddingRight="@dimen/common_12"
        android:paddingTop="@dimen/common_8"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="钱包余额:"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/common_16" />

        <TextView
            android:id="@+id/pay_video_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_3"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/common_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_3"
            android:text="元"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/common_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <!--  <RelativeLayout
              android:id="@+id/pay_video_money_rl"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/common_14">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:drawableLeft="@mipmap/pay_money_icon"
                  android:drawablePadding="@dimen/common_6"
                  android:text="钱包余额支付"
                  android:textSize="@dimen/common_14" />

              <CheckBox
                  android:id="@+id/pay_video_cb_money"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:background="@drawable/selector_pay_method"
                  android:button="@null"
                  android:checked="false"
                  android:clickable="false"
                  android:focusableInTouchMode="false" />
          </RelativeLayout>-->

        <RelativeLayout
            android:id="@+id/pay_video_money_wechat_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/pay_wechat_icon"
                android:gravity="center"
                android:drawablePadding="@dimen/common_6"
                android:text="微信支付"
                android:textSize="@dimen/common_14" />

            <CheckBox
                android:id="@+id/pay_video_cb_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_pay_method"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:focusableInTouchMode="false" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1"
            android:background="@color/divider"
            android:layout_marginLeft="@dimen/common_14"
            android:layout_marginRight="@dimen/common_14"
            />
        <RelativeLayout
            android:id="@+id/pay_video_money_alipay_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/pay_alipay_icon"
                android:drawablePadding="@dimen/common_6"
                android:gravity="center"
                android:text="支付宝支付"
                android:textSize="@dimen/common_14" />

            <CheckBox
                android:id="@+id/pay_video_cb_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_pay_method"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                android:focusableInTouchMode="false" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/activity_pay_video_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_16"
        android:layout_marginRight="@dimen/common_16"
        android:layout_marginTop="@dimen/common_24"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/pay_text_color">

        <TextView
            android:id="@+id/activity_pay_video_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="@dimen/common_12"
            android:paddingTop="@dimen/common_12"
            android:text="确认支付¥6.00元"
            android:textColor="@color/white"
            android:textSize="@dimen/common_18" />

    </RelativeLayout>

</LinearLayout>