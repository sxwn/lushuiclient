<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/update_username_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_24"
        android:layout_marginLeft="@dimen/common_8"
        android:layout_marginRight="@dimen/common_8"
        android:background="@drawable/shape_notice_status"
        android:hint="请输入用户名"
        android:maxLines="1" />

    <Button
        android:id="@+id/update_commit"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@id/update_username_et"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/common_24"
        android:layout_marginTop="@dimen/common_8"
        android:background="@color/black"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white" />
</RelativeLayout>