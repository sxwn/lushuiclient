<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_20"
            android:layout_weight="1">

            <TextView
                android:id="@+id/vip_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98元/1个月"
                android:textColor="#FFFA8072"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/vip_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_item_type"
                android:layout_marginTop="@dimen/common_5"
                android:text="当月1-6元视频免费看"
                android:textColor="#9B9B9B"
                android:textSize="13dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/vip_item_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="27dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/member_vip_open_bg"
            android:gravity="center"
            android:text="开通"
            android:textColor="#FFFFFFFF"
            android:textSize="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:layout_marginLeft="@dimen/common_20"
        android:layout_marginRight="@dimen/common_20"
        android:background="#F0F0F0" />
    <View
        android:id="@+id/gone_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_20"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/common_20"
        android:layout_marginRight="@dimen/common_20"
        android:background="@color/white" />
</LinearLayout>