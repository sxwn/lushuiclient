<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_14"
        android:text="提现到"
        android:textSize="@dimen/common_14"
        android:textColor="@color/text_color_333"/>

    <RelativeLayout
        android:id="@+id/obtain_cash_alipay_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_14">

        <TextView
            android:id="@+id/obtain_cash_alipay_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/pay_alipay_icon"
            android:drawablePadding="@dimen/common_8"
            android:gravity="center_vertical"
            android:text="@string/mine_alipay" />

        <CheckBox
            android:id="@+id/obtain_cash_cb_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_pay_method"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            android:focusableInTouchMode="false" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_14"
        android:text="提现金额"
        android:textSize="@dimen/common_14"
        android:textColor="@color/text_color_333"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_14">

        <TextView
            android:id="@+id/obtain_cash_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="¥"
            android:textSize="@dimen/common_28" />

        <EditText
            android:id="@+id/obtain_cash_monet_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_14"
            android:layout_toRightOf="@id/obtain_cash_code"
            android:background="@null"
            android:inputType="numberDecimal"
            android:hint="输入提现金额" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/obtain_cash_layout_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_24"
        android:padding="@dimen/common_12"
        android:background="#FD2E42">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提现"
            android:textSize="@dimen/common_18"
            android:textColor="@color/white"/>
    </RelativeLayout>


</LinearLayout>