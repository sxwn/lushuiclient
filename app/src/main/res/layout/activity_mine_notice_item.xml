<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_12">

    <ImageView
        android:id="@+id/notice_item_usericon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/notice_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_8"
        android:layout_toRightOf="@id/notice_item_usericon"
        android:textColor="@color/main_color" />

    <TextView
        android:id="@+id/notice_item_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_notice_status"
        android:text="已关注"
        android:visibility="gone"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/common_14" />


</RelativeLayout>